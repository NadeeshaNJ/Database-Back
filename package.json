{
  "name": "hotel-management-backend",
  "version": "1.0.0",
  "description": "Backend for Hotel Management System with PostgreSQL",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "test": "jest --verbose --coverage",
    "test:watch": "jest --watch",
    "test:auth": "jest tests/auth.test.js",
    "test:rooms": "jest tests/rooms.test.js",
    "test:bookings": "jest tests/bookings.test.js",
    "db:seed": "node seeds/index.js",
    "db:reset": "node seeds/index.js --force",
    "db:sync": "node -e \"require('./models').syncDatabase()\""
  },
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-validator": "^7.0.1",
    "helmet": "^7.2.0",
    "jsonwebtoken": "^9.0.2",
    "moment": "^2.29.4",
    "morgan": "^1.10.0",
    "nodemailer": "^6.9.7",
    "pg": "^8.11.3",
    "pg-hstore": "^2.3.4",
    "sequelize": "^6.32.1"
  },
  "devDependencies": {
    "jest": "^29.7.0",
    "nodemon": "^3.0.1",
    "supertest": "^6.3.3"
  },
  "jest": {
    "testEnvironment": "node",
    "collectCoverageFrom": [
      "controllers/**/*.js",
      "routes/**/*.js",
      "middleware/**/*.js",
      "utils/**/*.js"
    ],
    "coverageDirectory": "coverage",
    "setupFilesAfterEnv": [
      "./tests/setup.js"
    ]
  }
}
